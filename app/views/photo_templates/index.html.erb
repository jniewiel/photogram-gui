<h1>List of photos</h1>

<hr>

<form action="/insert_photo" method="post">
  <label for="image_box">Image</label>
  <input type="text" name="query_image" id="image_box">
  
  <label for="caption_box">Caption</label>
  <textarea name="query_caption" id="caption_box"></textarea>
  
  <label for="owner_id_box">Owner ID</label>
  <input type="text" name="query_owner_id" id="owner_id_box">
  
  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |a_photo| %>
    <tr>
      <td>
        <img src="<%= a_photo.image %>">
      </td>
      <td>
        <%= a_photo.caption %>
      </td>
      <td>
        <%= a_photo.poster.username %>
      </td>
      <td>
        <%= a_photo.created_at %>
      </td>
      <td>
        <a href="/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
