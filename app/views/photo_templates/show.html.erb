<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>">
      <label for="browser_image">Image</label>
      <input type="text" name="query_image" id="browser_image" placeholder="Enter a URL for the image..." value="<%= @the_photo.image %>">

      <label for="browser_cation">Caption</label>
      <textarea name="query_caption" id="browser_caption" placeholder="Enter a caption for this photo..."><%= @the_photo.caption %></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td><%= a_comment.commenter.username %></td>
      <td><%= a_comment.body %></td>
      <td><%= a_comment.created_at %></td>
    </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>

<dt>New Comment</dt>
<dd>
  <form action="/add_comment/<%= @the_photo.id %>">
    <label for="browser_author_id">Author ID</label>
    <input type="text" name="query_author_id" id="browser_author_id" placeholder="Enter an author ID for the image...">

    <label for="browser_comment">Comment</label>
    <textarea name="query_comment" id="browser_comment" placeholder="Enter a comment for this photo..."></textarea>

    <button>Add comment</button>
  </form>
</dd>
